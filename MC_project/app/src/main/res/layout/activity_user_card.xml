<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:elevation="8dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="7dp"
        card_view:cardUseCompatPadding="false">

        <RelativeLayout
            android:id="@+id/user_card_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/member_name"
                android:fontFamily="@font/droidserifbold"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textColor="@color/black_p"
                android:layout_marginBottom="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Saurabh kapoor"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/member_email"
                android:fontFamily="@font/droidserifregular"
                android:textColor="@color/black_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_name"
                android:layout_centerHorizontal="true"
                android:text="sourav15106@iiitd.ac.in"
                android:textSize="20dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
